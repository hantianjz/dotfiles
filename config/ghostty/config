theme = catppuccin-mocha.conf
macos-titlebar-style = hidden
confirm-close-surface = false

font-size = 9
font-family = "Hack Nerd Font Mono"

clipboard-read = allow
clipboard-write = allow
window-save-state = never
window-theme = ghostty
confirm-close-surface=false
resize-overlay = never
gtk-toolbar-style = flat

shell-integration-features = no-cursor

cursor-style = block
cursor-style-blink = true

### START KEY BINDING
keybind = clear

keybind = performable:super+alt+i=inspector:toggle
keybind = performable:super+v=paste_from_clipboard
keybind = performable:super+c=copy_to_clipboard
keybind = shift+insert=paste_from_clipboard
keybind = control+insert=copy_to_clipboard

keybind = performable:super+zero=reset_font_size
keybind = performable:super+minus=decrease_font_size:1
keybind = performable:super+equal=increase_font_size:1

keybind = performable:super+n=new_window
keybind = global:super+enter=new_window

keybind = performable:super+comma=open_config
keybind = performable:super+q=quit

keybind = performable:super+up=jump_to_prompt:-1
keybind = performable:super+down=jump_to_prompt:1

### END of KEY BINDING

mouse-hide-while-typing = true
focus-follows-mouse = true
macos-titlebar-style = hidden
macos-option-as-alt = false
keybind = shift+enter=text:\x1b\r
mouse-scroll-multiplier = 0.95

